package com.hongfox.exer2;

public class EcmDef {
	public static void main(String[] args) {
		try {
			int a = Integer.parseInt(args[0]);
			int b = Integer.parseInt(args[1]);
		}
	}
	
	public int ecm(int a,int b) throws ArithmeticException {
		try {
			return a/b;
		}catch(ArithmeticException e) {
			throw e;
		}
	}
	
	
}
